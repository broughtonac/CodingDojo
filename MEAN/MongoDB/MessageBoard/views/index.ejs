<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
</head>
<body>
    <fieldset>
        <legend>post a message</legend>
        <form id="post" action="/post" method="post">
            <p>name:<br><input type="text" name="name"></p>
            <p>post:<br><textarea form="post" name="content"></textarea></p>
            <p><input type="submit" value="submit"></p>
        </form>
    </fieldset>
    <% for (let i = 0; i < posts.length; i++) { %>
        <fieldset>
            <h3>name: <%= posts[i].name %></h3>
            <p>post: <%= posts[i].content %></p>
            <form id="comment" action=<%= "/comment/" + posts[i]._id %> method="post">
                <p>name:<br><input type="text" name="name"></p>
                <p>comment:<br><input type="text" name="content"></p>
                <p><input type="submit" value="submit"></p>
            </form>
            <% for (let j = 0; j < posts[i].comments.length; j++) { %>
                <h4>name: <%= posts[i].comments[j].name %></h4>
                <p>comment: <%= posts[i].comments[j].content %></p>
            <% } %>
        </fieldset>
    <% } %>
</body>
</html>